scope main {

    norm n : order(N)[source(order)] & play(U, unit, _)
        -> obligation(U, n, vl(N, X)[source(U)] & X>5, deadlineOrder(N))
    .

    norm des1 : design(Who, n, modify(subject, N))
        -> obligation(Who, des1, designed(modify(subject, N), n, Norm), `2 minutes`)
    .

    norm des2 : design(Who, n, modify(object, N))
        -> obligation(Who, des2, designed(modify(object, N), n, Norm), `2 minutes`)
    .

    norm exe : execute(Who, N1, designed(OP, Norm))
        -> obligation(Who, exe, executed(N1, designed(OP, Norm)), `2 minutes`)
    .
}